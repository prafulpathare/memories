<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#F0F0F0"/> <!-- Change as needed -->

    <!-- Rounded corners -->
    <corners android:radius="12dp"/>

    <!-- Optional border -->
    <stroke
        android:width="0dp"
        android:color="#F4F4F4"/>

    <!-- Optional inner padding -->
    <padding
        android:left="15dp"
        android:top="10dp"
        android:right="15dp"
        android:bottom="10dp"/>
</shape>
